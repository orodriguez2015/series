
 <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Notas
      <small>Listado</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Inicio</a></li>
      <li class="active">Listado de notas</li>
    </ol>
  </section>


  <section class="content">
      
      
      <div class="form-group">
          
          <% for(var i=0;posts!=undefined && i<posts.length;i++) { %>
          
            <h2><b><%=posts[i].titulo%></b></h2>
            <p>Creado el <%=posts[i].createdAt%>
            <p>
                               
                <img height=15 width=15 src="/images/23_full_trash.png" title="Eliminar" alt="Eliminar" onclick="confirmarEliminacion(<%=posts[i].id%>);"/>
                
                </form>    
            </p>    
            <div class="separador"></div>
            <p><%=posts[i].descripcion%></p>
          
          <% } %>
         
       </div>

  </section>
    
</div>

<script type="text/javascript" src="/javascripts/postFacade.js"></script>

<script type="text/javascript">
                    
    function confirmarEliminacion(idPost) { 

        console.log("confirmaEliminacion videoId: " + idPost);

        if(confirm('Â¿Desea eliminar la noticia?')) {
            var postFacade = new PostFacade();
            postFacade.deletePost("/posts/" + idPost + "?_method=DELETE",       {idPost:idPost},success,error);
        }// if
    }

        
    function success(msg) {
        var message = new MessagesArea();
        message.showMessageSuccess(msg);
        window.location.href = "/posts";
    };
    
    function error(msg) {
        var message = new MessagesArea();
        message.showMessageError(msg);
    };
    
    
