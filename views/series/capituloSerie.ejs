       <div class="box-body">  
           
    <% if(serie.capituloSerieses!=undefined && serie.capituloSerieses.length>0) { %>       
    <table id="example2" class="table table-bordered table-hover">
      <thead>
        <tr>
          <th width="25%">Capítulo</th>
          <th width="25%">Fecha de alta</th>
          <th>&nbsp;</th>    
        </tr>
      </thead>
      <tbody>
      <% for(var i=0;i<serie.capituloSerieses.length;i++){ %>
        <tr>
