
 <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Usuarios
      <small>Edición</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Inicio</a></li>
      <li class="active"> Edición de usuario</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">

 
 <form name="formEditUsuario" id="formEditUsuario" role="form" method="POST" action="" novalidate>   
 <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">Datos generales del usuario</h3>
    </div><!-- /.box-header -->
    
      <div class="box-body">

         <div class="form-group">
          <input type="hidden" id="id" name="id" value="<%=usuario.id%>"/>
          <label for="Nombre">Nombre</label>
          <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Introduzca el nombre" value="<%=usuario.nombre%>">
        </div>

        <div class="form-group">
          <label for="Nombre">Primer apellido</label>
          <input type="text" class="form-control" id="apellido1" name="apellido1" placeholder="Introduzca el primer apellido" value="<%=usuario.apellido1%>">
        </div>

         <div class="form-group">
          <label for="Nombre">Segundo apellido</label>
          <input type="text" class="form-control" id="apellido2" name="apellido2" placeholder="Introduzca el segundo apellido" value="<%=usuario.apellido2%>">
        </div>

        <div class="form-group">
          <label for="exampleInputEmail1">Email</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Introduzca el mail" value="<%=usuario.email%>">
        </div>
       
      </div><!-- /.box-body -->
    
   </div>



  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">Cuenta del usuario</h3>
    </div><!-- /.box-header -->
    
      <div class="box-body">

         <div class="form-group">
          <label for="Nombre">Login</label>
          <input type="text" class="form-control" id="login" name="login" placeholder="Introduzca el login" value="<%=usuario.login%>">
        </div>

        
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Introduzca el password" value="<%=usuario.password%>">
        </div>
        
      </div><!-- /.box-body -->

      <div class="box-footer">
        <button type="submit" name="btnAltaUsuario" id="btnAltaUsuario" class="btn btn-primary">Enviar</button>
      </div>
    
   </div>
   </form>


  <div id="msgError" class="callout callout-danger lead" style="display:none;">
   
  </div>

  
  </section><!-- /.content -->
</div><!-- /.content-wrapper -->


<script type="text/javascript" src="/javascripts/jquery.validate.js"></script>
<script type="text/javascript" src="/javascripts/additional-methods.js"></script>
<script type="text/javascript" src="/javascripts/messages_es.js"></script>

<script type="text/javascript" src="/javascripts/edicionUsuario.js"></script>
    
  <script type="text/javascript">
      function enviarFormulario() {
          document.formEditUsuario.method = "POST";
          document.formEditUsuario.action ="/users/edit/" + "<%=usuario.id%>";
          
          document.formEditUsuario.submit();
      }
  </script>



