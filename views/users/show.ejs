
 <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Usuarios
      <small>Listado</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Inicio</a></li>
      <li class="active">Listado de usuario</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">

  <div class="box">
  
                  
  <div class="box-body">  
    <table id="example2" class="table table-bordered table-hover">
      <thead>
        <tr>
          <th colspan="2">&nbsp</th>
          <th>Nombre</th>
          <th>Primer apellido</th>
          <th>Segundo apellido</th>
          <th>Email</th>
          <th>Login</th>
        </tr>
      </thead>
      <tbody>
      <% for(var i=0;i<users.length;i++) { %>
        <tr>
          <td width="40px">

            <a href="/users/<%=users[i].id%>">
                <img src="/images/pencil2.png" width="18" height="18" border="0" alt="Editar" title="Editar">
              </a> 
          </td>
          <td width="40px">    

            <form name="formDelete" method="POST" action="/users/<%=users[i].id%>?_method=DELETE" onsubmit="return confirmarEliminar('<%=users[i].nombre%>','<%=users[i].apellido1%>','<%=users[i].apellido2%>');">
              <input type="image" src="/images/23_full_trash.png" height="18" width="18" alt="Eliminar" title="Eliminar">
            </form> 
                
              
          </td>
          <td><%=users[i].nombre%></td>
          <td><%=users[i].apellido1%></td>
          <td><%=users[i].apellido2%></td>
          <td><%=users[i].email%></td>
          <td><%=users[i].login%></td>
        </tr>
      <% } %>  
        
      <tfoot>
        <tr>
          <th colspan="2">&nbsp</th>
          <th>Nombre</th>
          <th>Primer apellido</th>
          <th>Segundo apellido</th>
          <th>Email</th>
          <th>Login</th>
        </tr>
      </tfoot>
    </table>
      <br>
      <a href="/users/new">Alta de usuario</a>
  </div><!-- /.box-body -->
  </div> 


  
  </section><!-- /.content -->
</div><!-- /.content-wrapper -->

