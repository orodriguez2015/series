
 <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Usuarios
      <small>Listado</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Inicio</a></li>
      <li class="active">Listado de usuario</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">

  <div class="box">
    
      <!--------------------------------->
          

      <!---------------------------------->
  
                  
  <div class="box-body">  
    <table id="example2" class="table table-bordered table-hover">
      <thead>
        <tr>
          <th width="200px">&nbsp</th>
          <th>Nombre</th>
          <th>Primer apellido</th>
          <th>Segundo apellido</th>
          <th>Email</th>
          <th>Login</th>
        </tr>
      </thead>
      <tbody>
      <% for(var i=0;i<users.length;i++) { %>
        <tr>
          <td width="200px">
            <form name="formDelete" method="POST" action="/users/<%=users[i].id%>?_method=DELETE">

              <button type="submit" class="btn bg-olive margin">Editar</button>
              <button type="submit" class="btn bg-olive margin">Eliminar</button>
            </form>  
          <td><%=users[i].nombre%></td>
          <td><%=users[i].apellido1%></td>
          <td><%=users[i].apellido2%></td>
          <td><%=users[i].email%></td>
          <td><%=users[i].login%></td>
        </tr>
      <% } %>  
        
      <tfoot>
        <tr>
          <th>&nbsp</th>
          <th>Nombre</th>
          <th>Primer apellido</th>
          <th>Segundo apellido</th>
          <th>Email</th>
          <th>Login</th>
        </tr>
      </tfoot>
    </table>
  </div><!-- /.box-body -->
  </div> 


  
  </section><!-- /.content -->
</div><!-- /.content-wrapper -->

