<link href="/stylesheets/youtube.css" rel="stylesheet" type="text/css" />
<style type="text/css">
<style type="text/css">
	
	/* base semi-transparente */
    .overlay{
        display: none;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: #000;
        z-index:1001;
		opacity:.75;
        -moz-opacity: 0.75;
        filter: alpha(opacity=75);
    }
	
    /* estilo para lo que este dentro de la ventana modal */
    .modal {
        display: none;
        position: absolute;
        top: 25%;
        left: 25%;
        width: 60%;
        height: 75%;
        padding: 16px;
        background: #fff;
		color: #333;
        z-index:1002;
        overflow: auto;
    }

</style>

 <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Vídeos de Youtube
      <small>Listado</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Inicio</a></li>
      <li class="active">Mis vídeos de Youtube</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">

  <div class="box">
  
    <!--
      <form action="#">              
-->
          <div class="box-body">  
        
              <div id="results">
              <!---------------------->
              
            <% for(var i=0;videos!=undefined && i<videos.length;i++) { %>
                <div style="margin-left:10px;width:30%;height:220px;float:left">
    
                <div align="left">
                    <a href="#" onclick="javascript:mostrarVideo('<%=videos[i].idVideo %>');" border="0">
                        <img src="<%=videos[i].urlImagen%>" border="0" width="196" height="110"/>
                    </a>

                <label class="tituloVideoYoutube"><%=videos[i].tituloVideo%></label>
                <br> 
                <label class="canalVideoYoutube">de <%=videos[i].descCanal%></label>
                <form name="formDelete" action="/videos/<%=videos[i].id%>?_method=DELETE" method="POST" onsubmit="return confirmarEliminacion();">
                <input height=15 width=15 type="image" src="/images/23_full_trash.png" title="Eliminar" alt="Eliminar"/> 
                </form>      
                 
                </div>    
                </div>
      
            <% }// for %>  
              
                
              <!------------------------>
              </div>
          </div><!-- /.box-body -->
          </div> 
<!--      
</form>
-->
      
</div>       
      
      
  </section>
</div>

<!-- Div en el que se mostrará el vídeo de youtube -->
<div id="ytplayer" class="modal">
    <a href = "javascript:void(0)" onclick = "document.getElementById('light').style.display='none';document.getElementById('fade').style.display='none'">
    Cerrar</a>
</div>

<div id="fade" class="overlay" onclick="document.getElementById('ytplayer').style.display='none';document.getElementById('fade').style.display='none'">
</div>

   
<!-- Se incluye el API JS de youtube para mostrar vídeos -->
<script async type="text/javascript" src="https://www.youtube.com/player_api"></script>
<script type="text/javascript" src="/javascripts/youtubePlayer.js"></script>
<!--
<script type="text/javascript" src="/javascripts/youtubeApi.js"></script>
-->
<!-- Se incluye el API JS de youtube para poder buscar vídeos -->
<script src="https://apis.google.com/js/client.js?onload=init"></script>
<script type="text/javascript">
    
    function confirmarEliminacion() { 
        var salida = false;
        if(confirm('¿Desea eliminar el vídeo?')) {
            salida = true;
        }
        
        return salida;
    }

</script>
